    ViewData["Title"] = "Заказы";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/OrderStyle.css" />
<div class="order_main">
    <div class="order_main_content">
        <div class="order_main_content_name">
            <h1>Заказ</h1>
        </div>
        <div class="order_main_content_values">
            <div class="order_main_content_values_check ">
                <div class="values_check_names">
                    <div class="check_names_count">
                        <h2>Количество товаров в заказе:</h2>
